                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "39044"
                        }
                    },
                    {
                        "name": "39045",
                        "properties": {
                            "priority": 1120,
                            "protocol": "TCP",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "39045"
                        }
                    },
                    {
                        "name": "1128",
                        "properties": {
                            "priority": 1130,
                            "protocol": "TCP",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "1128"
                        }
                    },
                    {
                        "name": "1129",
                        "properties": {
                            "priority": 1140,
                            "protocol": "TCP",
